<section class="container container_contact">
    <h2>Nous contacter</h2>
    <div class="card card_contact text-center">
                <div class="card-body">
            <p class="card-text">Monsieur TITI Toto - Référent du club Athéon</p>
            <p class="card-text">Tél : 0102030405</p>
            <p class="card-text">Mail: <a href="#">titi.toto@mail.com</a> </p>      

        </div>
        <div class="card-body card_form">
         {{ form_start(contactForm) }}
            <form class="col-12 col-lg-7 form text-center" enctype="text/plain" action="mailto:f.quelier@gmail.com" method="POST">
                <div>
               
                {{contact.email}}
                    <input class="input_form" type="text" name="nom" value="" placeholder="Votre nom">
                </div>
                <div>
                

                {{contact.email}}
                    <input class="input_form" type="email" name="email" value=""
                                placeholder="Votre adresse email">
                </div>
                <div>
                {{contact.message|raw}}
                    <textarea class="input_form" name="message" value="" placeholder="Votre message"
                                maxlength="300"></textarea>
                </div>
                <input class="envoyer btn" type="submit" value="Envoyer" name="Envoyer">
                {{ form_end(contactForm) }}
            </form>
        </div>
    </div>
</section>
{% endblock %}
